<% layout("/layouts/boilerplate") -%>

<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Create a new listing</h3>
        
        <form method="POST" action="/listings" novalidate class="needs-validation"> 
          
          <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input
              type="text"
              name="listing[title]"
              placeholder="enter title"
              class="form-control"
              required
            />
            <div class="valid-feedback">Awesome!</div>
            <div class="invalid-feedback">Please enter the title!</div>
          </div>
      
          <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea
            id="description"
              name="listing[description]"
              class="form-control"
              required
            ></textarea>
            <div class="valid-feedback">Good!!</div>
            <div class="invalid-feedback">Description should be valid</div>
          </div>
      
          <div class="mb-3">
            <label for="image" class="form-lable">Image Link</label>
            <input
              type="text"
              name="listing[image]"
              placeholder="enter image URL/Link"
              class="form-control"
            />
            <div class="valid-feedback">looks good!!</div>
            <div class="invalid-feedback">Fill this place!</div>
          </div>
           <div class="row"> 
            <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input
           
              type="number"
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="valid-feedback">Awesome!!</div>
            <div class="invalid-feedback">Please enter the valid price!</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Location</label>
            <input
         
              type="text"
              name="listing[location]"
              placeholder="enter location"
              class="form-control"
              required
            />
            <div class="valid-feedback">Good!!</div>
            <div class="invalid-feedback">Location should be valid</div>
          </div>
        </div>
          <div class="mb-3">
            <label for="country" country="form-lable">Country</label>
            <input type="text" id="country" name="listing[country]" class="form-control" required/>
            <div class="valid-feedback">Awesome!!</div>
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
          <button class="btn btn-dark add-btn">Add</button>
        </form>
        <br>
    </div>  
    <script src="/js/script.js"></script>
</div>


