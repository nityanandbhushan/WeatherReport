<% layout("/layouts/boilerplate") -%>

<body>
  <h3>All Listings</h3>
  <form method= "get" action="/listings/new">
  </form>
  <div class="row row-cols-lg-3 ro-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings ){ %>
      <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="cards col">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%> </b>
            <br />
           
            <% if (listing && listing.price !== null) { %>
              &#x20B9; <%= listing.price.toLocaleString("en-IN") %> /night
            <% } else { %>
              Price information not available
            <% } %>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
