<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listings</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          
          name="listing[title]"
          value="<%=listing.title%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Awesome!</div>
        <div class="invalid-feedback">Please enter the title!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="listing[description]"
          value="<%=listing.description%>"
          class="form-control"
          required
        >
<%=listing.description%></textarea
        >
        <div class="valid-feedback">Good!!</div>
        <div class="invalid-feedback">Description should be valid</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Image Url</label>
        <input
          type="text"
          name="listing[image]"
          value="<%=listing.image%>"
          class="form-control"
          required
        />
        <div class="valid-feedback">looks good!!</div>
        <div class="invalid-feedback">Fill this place!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            type="number"
            name="listing[price]"
            value="<%=listing.price%>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Awesome!!</div>
          <div class="invalid-feedback">Please enter the valid price!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-lable">Location</label>
          <input
            name="listing[location]"
            type="text"
            class="form-control"
            value="<%=listing.location%>"
            required
          />
          <div class="valid-feedback">Good!!</div>
          <div class="invalid-feedback">Location should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-lable">Country</label>
        <input
          type="text"
          id="country"
          name="listing[country]"
          value="<%=listing.country%>"
          required
        />
        <div class="valid-feedback">Awesome!!</div>
        <div class="invalid-feedback">Country name should be valid</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
  <script src="/js/script.js"></script>
</div>
