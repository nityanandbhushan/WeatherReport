<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><b><%=listing.title%></b></h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%=listing.image.url%>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <%=listing.description%> <br />
      &#x20B9; <%= typeof listing.price === 'number' ?
      listing.price.toLocaleString("en-IN") : 'Invalid Price' %>
      <br />
      <%=listing.location%>
      <br />
      <%=listing.country%>
    </div>
  </div>
</div>
<div class="bttns mt-3">
  <a
    href="/listings/<%=listing._id%>/edit"
    class="edit-list btn btn-dark col-1 offset-3 edit-btn"
    >Edit</a
  >

  <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-dark offset-4">Delete</button>
  </form>
</div>

<div class="col-8 offset-3 mt-3 mb-3">
  <hr />
  <h4>Leave a Review</h4>
  <form action="/listings/<%=listing.id%>/reviews" method="POST">
    <div class="mt-3 mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        class="form-range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
      />
    </div>
    <div class="mt-3 mb-3">
      <label for="comment" class="form-lable">Comments</label>
      <br />
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
      ></textarea>
      <br />
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>
